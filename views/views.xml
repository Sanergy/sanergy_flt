<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="flt_list">
      <field name="name">Fresh Life Toilets</field>
      <field name="model">sanergy.flt</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date_opened"/>
          <field name="date_closed"/>
          <field name="status"/>

        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="flt_action_window">
      <field name="name">Fresh Life Toilets</field>
      <field name="res_model">sanergy.flt</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <record model="ir.actions.server" id="flt_action_server">
      <field name="name">flt server</field>
      <field name="model_id" ref="model_sanergy_flt"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="FLT" id="flt_menu_root"/>

    <!-- menu categories -->

    <menuitem name="FLT" id="flt_menu_1" parent="flt_menu_root"/>

    <!--<menuitem name="FLT 2" id="flt_menu_2" parent="flt_menu_root"/>-->

    <!-- actions -->

    <menuitem name="Open/Close" id="flt_menu_1_list" parent="flt_menu_1" action="flt_action_window"/>


  </data>
</odoo>